{
    "compilerOptions": {
        "module": "amd",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        // "outFile": "./build/build.js",
        "sourceMap": true,
        "typeRoots" : ["./typings", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}